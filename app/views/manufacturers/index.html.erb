<div id="body-box">
<h1>Tire Tracks</h1>

<div id="stats-box">
    <h1>Manufacturer Statistics</h1>
    <h3>Average Year Founded: <%= @avg_year_founded.round(0).to_i %></h3>
    <h3>Unique Cities:</h3>
    <% @unique_cities.each do |city| %>
    <ul>
        <li><%= city %></li>
    </ul>
    <% end %>
</div>

<% @manufacturers.each do |manufacturer| %>
    <section class="manufacturer-card" id="manufacturer-<%= manufacturer.id %>" 
        <ul>
            <li>Manufacturer Name: <%= manufacturer.name %> </li>
            <li>City: <%= manufacturer.city %> </li>
            <li>Year Founded: <%= manufacturer.year_founded %> </li>
            <img height="200" width="150" src="<%= manufacturer.logo_url %>" alt="logo-<%= manufacturer.id %>">
            <li>Car Count: <%= manufacturer.car_count %></li>
            
            <br>
        </ul>
        
        <section class="car-box">
            <% manufacturer.cars.each do |car| %>
            <ul id="car-stat-list-<%= car.id %>">
                <li> <%= car.year %> </li>
                <li> <%= car.name %> </li>
            </ul>
            <% end %>
        </section>
    </section>
<% end %>

</div>